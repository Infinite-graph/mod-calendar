{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Opening period",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "servicePointId": {
      "type": "string"
    },
    "isException": {
      "type": "boolean"
    },
    "startDate": {
      "type": "string",
      "format": "date-time"
    },
    "endDate": {
      "type": "string",
      "format": "date-time"
    },
    "openingDays": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "OpeningDay.json"
      }
    },
    "creationDate": {
      "type": "string",
      "format": "date-time"
    },
    "createdBy": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "startDate"
  ]
}
