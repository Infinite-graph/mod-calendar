{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Calendar event description",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "descriptionType": {
      "type": "string",
      "enum": [
        "OPENING_DAY",
        "EXCLUSION"
      ]
    },
    "startDate": {
      "type": "string",
      "format": "date-time"
    },
    "endDate": {
      "type": "string",
      "format": "date-time"
    },
    "twelveHour": {
      "type": "boolean"
    },
    "openingDays": {
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "OpeningDay"
      }
    },
    "creationDate": {
      "type": "string",
      "format": "date-time"
    },
    "createdBy": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "startDate",
    "endDate"
  ]
}
